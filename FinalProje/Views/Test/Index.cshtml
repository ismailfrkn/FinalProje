@using FinalProje.ViewModels
@{
    ViewData["Title"] = "Index";
}
@model List<SoruModel>
<h2>Sorular</h2>
<hr />
<a asp-action="Insert" class="btn btn-outline-dark">Ekle</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Soru</th>
            <th>A</th>
            <th>B</th>
            <th>C</th>
            <th>D</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@item.Question</td>
                <td>@item.Answer1</td>
                <td>@item.Answer2</td>
                <td>@item.Answer3</td>
                <td>@item.Answer4</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-info">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
                </td>
            </tr>

            i++;

        }

    </tbody>
</table>

